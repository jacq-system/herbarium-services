{% extends 'base.html.twig' %}
{% block title %}JACQ - Virtual Herbaria{% endblock %}

{% block body %}
 <!-- Matomo -->
    <script type="text/javascript">
      var _paq = window._paq || [];
      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//iiif.jacq.org/piwik/matomo/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '1']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
    <!-- End Matomo Code -->

    <div class="navbar-fixed">
        <nav class="nav-extended white">
            <div class="nav-wrapper">
                <div style="height: 45px"><a href="{{ path('output_index') }}">
                        <img class="main-logo" src="{{ asset('logo/jacq/jacq.png') }}" alt="JACQ Logo"></a></div>
                <ul>
                    <li {% if app.request.attributes.get('_route') == 'output_index' %}class="active"{% endif %}">
                        <a href="{{ path('output_index') }}">Home</a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'output_database' %}class="active"{% endif %}>
                        <a href="{{ path('output_database') }}">Database</a>
                    </li>
                    {% if app.request.attributes.get('_route') == 'output_specimenDetail' %}
                    <li class="active">
                        <a href="#">Specimen detail</a>
                    </li>
                    {% endif %}
                    <li {% if app.request.attributes.get('_route') == 'output_collections' %}class="active"{% endif %}>
                        <a href="{{ path('output_collections') }}">Collections</a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'output_systems' %}class="active"{% endif %}>
                        <a href="{{ path('output_systems') }}">Reference Systems</a>
                    </li>
                    <li {% if app.request.attributes.get('_route') == 'tools_overview' %}class="active"{% endif %}>
                        <a href="{{ path('tools_overview') }}">Tools</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <main>
        {% block main %}{% endblock %}
    </main>
    <footer class="page-footer center white">
        <hr>
        <a href="{{ path('output_imprint') }}">Imprint | Citation | Privacy</a>
    </footer>
{% endblock %}
